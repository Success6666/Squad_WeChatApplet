     <view class="badge" style="position: absolute; left: 50%; transform: translateX(-50%); opacity: 0.6; font-size: 20rpx;">{{typeText}}</view>

     <!-- Signup Button Right -->
     <button class="grid-btn primary" style="width: 120rpx !important; position: absolute; right: 0; bottom: 0;" catchtap="onSignup">æŠ¥å</button>
  </view>
</view>

