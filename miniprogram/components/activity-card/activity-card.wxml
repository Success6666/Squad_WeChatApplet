      <text class="icon">ğŸ‘¥</text>
      <text class="info-text">{{activity.signupCount || 0}}/{{activity.limit || 0}} æˆå‘˜</text>
    </view>
  </view>

  <!-- Actions -->
  <view class="row space-between" style="margin-top:auto; position: relative; height: 48rpx;">
