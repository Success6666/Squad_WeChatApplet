<view wx:if="{{mode === 'list'}}" class="list-card {{hover ? 'hover' : ''}}" bindtap="onTap" hover-class="hover">
  <!-- Top Row: Title + Status -->
  <view class="row space-between" style="align-items: flex-start; margin-bottom: 16rpx;">
    <view class="grid-title line-clamp" style="font-size: 34rpx; max-width: 500rpx; margin-bottom: 0;">{{activity.title}}</view>
    <view class="grid-tag {{activity.isSignup ? 'tag-green' : 'tag-blue'}}" style="margin: 0;">{{statusText}}</view>
  </view>

  <!-- Info Rows (Horizontal in List Mode maybe?) or stacked -->
  <view class="row start" style="gap: 32rpx; margin-bottom: 24rpx;">
    <view class="grid-info-row" style="margin: 0;">
      <text class="icon">ğŸ“…</text>
      <text class="info-text">{{startTimeText}}</text>
    </view>
