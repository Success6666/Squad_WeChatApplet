/* Modern Light Mode Palette */
:root {
  --bg-color: #F2F2F7;        /* iOS System Grouped Background - Light Grey */
  --bg-gradient: none;

  --panel-bg: #FFFFFF;        /* Pure White Cards */
  --panel-border: rgba(0, 0, 0, 0.05); /* Very subtle border */
  --panel-strong: #E5E5EA;    /* System Fill / Input bg */

  /* Primary Colors */
  --primary: #007AFF;         /* System Blue */
  --primary-bg: #007AFF;
  --primary-gradient: none;
  --primary-shadow: rgba(0, 122, 255, 0.2);

  --danger-bg: #FF3B30;       /* System Red */
  --danger-gradient: none;
  --success-color: #34C759;   /* System Green */

  /* Typography - Dark text on Light bg */
  --text-main: #000000;
  --text-secondary: #8E8E93;  /* System Grey */
  --text-placeholder: #AEAEB2; /* System Grey 2 */

  --radius-sm: 16rpx;
  --radius-md: 20rpx;
  --radius-lg: 24rpx;
}

/* Base resets handled in app.wxss, this file focuses on variables and utility classes */

.page {
  padding: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: var(--panel-bg);
  border-radius: var(--radius-md);
  border: 1px solid var(--panel-border);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06); /* Softer shadow for light mode */
  position: relative;
  overflow: hidden;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.col {
  display: flex;
  flex-direction: column;
}

.space-between {
  justify-content: space-between;
}

.center {
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
  letter-spacing: -0.5rpx;
}

.subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  line-height: 1.4;
}

/* Tags & Badges - Flat design */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: var(--panel-strong); /* Light grey background */
  color: var(--text-secondary); /* Dark grey text */
  line-height: 1;
}

.badge--brand {
  background: rgba(10, 132, 255, 0.15); /* Blue tint */
  color: #0A84FF;
}

.badge--danger {
  background: rgba(255, 69, 58, 0.15); /* Red tint */
  color: #FF453A;
}

.empty {
  text-align: center;
  color: var(--text-placeholder);
  padding: 80rpx 0;
  font-size: 28rpx;
}

/* Thin black divider used under page titles to separate header from content */
.title-divider-thin {
  height: 2rpx;
  /* changed to light gray per request */
  background: #E0E0E0;
  width: 100%;
  margin-top: 12rpx;
  margin-bottom: 18rpx;
}
