/* Modern iOS Grouped Form Style */

.form-group {
  margin-bottom: 32rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--panel-bg);
  box-shadow: 0 1px 2px rgba(0,0,0,0.03); /* Subtle shadow for depth */
}

.form-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: var(--panel-bg);
  border-bottom: 1px solid var(--panel-border);
  position: relative;
  min-height: 100rpx; /* Ensure touch target size */
}

/* Remove border from last item */
.form-cell:last-child {
  border-bottom: none;
}

.form-cell:active {
  background: var(--panel-strong);
}

.form-cell.stacked {
  flex-direction: column;
  align-items: flex-start;
  gap: 16rpx;
}

.cell-label {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-main);
  min-width: 160rpx;
  flex-shrink: 0;
}

.cell-title-large {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.cell-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: var(--text-main);
  height: 100%;
}

.cell-textarea {
  width: 100%;
  font-size: 30rpx;
  line-height: 1.5;
  color: var(--text-main);
  min-height: 160rpx;
  text-align: left;
}

.cell-picker {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: var(--text-main);
}

.cell-picker-placeholder {
  color: var(--text-placeholder);
}

.section-header {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin: 32rpx 16rpx 16rpx; /* Left indent to align with rounded card */
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  font-weight: 500;
}

