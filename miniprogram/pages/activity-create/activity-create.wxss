/* Modern Form Styling - iOS Grouped Table View Style */

.page {
  padding: 32rpx;
}

.form-group {
  margin-bottom: 40rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--panel-bg);
  /* 增强卡片质感 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.form-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: var(--panel-bg);
  border-bottom: 1px solid var(--panel-border);
  position: relative;
  transition: background 0.2s;
}

.form-cell:last-child {
  border-bottom: none;
}

.form-cell:active {
  background: var(--panel-strong);
}

/* Stacked layout for long text inputs like Title/Desc */
.form-cell.stacked {
  flex-direction: column;
  align-items: flex-start;
  gap: 16rpx;
}

.cell-label {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-main);
  min-width: 160rpx;
}

.cell-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: var(--text-secondary); /* Input value color */
  /* 让右侧输入“可编辑感”更强 */
  color: var(--text-main);
}

/* Override input styling for the cell context */
.cell-input.weui-input {
  height: auto;
  min-height: auto;
}

.cell-picker {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  font-size: 30rpx;
  color: #111827; /* actual value color */
}

.cell-picker-placeholder {
  color: #9CA3AF !important; /* gray placeholder for '请选择' */
}

.form-textarea {
  width: 100%;
  font-size: 30rpx;
  line-height: 1.5;
  color: var(--text-main);
  padding: 0;
  min-height: 120rpx;
  background: transparent;
}

/* Poster Uploader */
.poster-uploader {
  width: 100%;
  height: 360rpx; /* 16:9 aspect roughly */
  background: #000;
  border-radius: var(--radius-sm);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px dashed var(--panel-border);
  overflow: hidden;
  position: relative;
}

.poster-image {
  width: 100%;
  height: 100%;
}

.poster-tip {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
}

/* Section Headers */
.section-header {
  padding: 0;
  margin: 36rpx 0 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  text-transform: none;
  letter-spacing: 0;
}

/* center specific headers */
.section-center {
  text-align: center;
}

/* Input Placeholder override */
.ph{color: var(--text-placeholder);}

.poster{width: 180rpx; height: 180rpx; border-radius: 18rpx; border:1rpx solid var(--panel-border); background: var(--panel-strong);}

/* Activity create page styles adjustments */

.btn.full-row {
  width: 100% !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
  font-size: 28rpx !important;
  border-radius: 8rpx !important;
  display: block !important;
  margin: 0 auto !important;
}

/* ensure placeholder grey color (ph class) */
.ph {
  color: #9CA3AF !important;
}
