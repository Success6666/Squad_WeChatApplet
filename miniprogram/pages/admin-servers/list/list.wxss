.page { padding: 30rpx; background: #fff; min-height: 100vh }
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx }
.title { font-size: 32rpx; color: #1677FF }
.btn-create { background: #4096FF; color: #fff; padding: 8rpx 20rpx; border-radius: 8rpx }
.list .card { display: flex; justify-content: space-between; align-items: center; padding: 20rpx; border: 1px solid #E5E7EB; border-radius: 12rpx; margin-bottom: 20rpx }
.card-left .name { font-size: 30rpx; color: #1F2329 }
.card-left .meta { font-size: 24rpx; color: #666; margin-top: 8rpx }
.card-right .btn { margin-left: 12rpx }
.btn.small { height: 48rpx; line-height: 48rpx; padding: 0 18rpx; border-radius: 8rpx; background: #52C41A; color: #fff }
.btn.small.outline { background: transparent; border: 1px solid #D9D9D9; color: #666 }
.empty { color: #999; text-align: center; margin-top: 60rpx }
