page {
    background-color: #f7f7f9;
    font-family: sans-serif;
}
.page {
    padding: 15rpx;
    box-sizing: border-box;
}
.header {
    text-align: center;
    padding: 20rpx 0;
    margin-bottom: 15rpx;
}
.header .title {
    font-size: 34rpx;
    font-weight: bold;
    color: #1677FF;
}
.card {
    background: #ffffff;
    border-radius: 18rpx;
    padding: 22rpx;
    box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.05);
}
.row {
    margin-bottom: 25rpx;
    width: 100%;
    box-sizing: border-box;
}
.row:last-child {
    margin-bottom: 0;
}
label {
    display: block;
    font-size: 26rpx;
    color: #333;
    margin-bottom: 10rpx;
}
.picker {
    width: 100%;
    padding: 18rpx 15rpx;
    background: #f9f9f9;
    border-radius: 10rpx;
    font-size: 25rpx;
    color: #222;
    border: 1rpx solid #eee;
    box-sizing: border-box;
}
.map-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 15rpx;
}
.map-row .map-label {
    display: inline-block;
    margin-bottom: 0;
    flex-shrink: 0;
}
.map-row .map-picker {
    width: auto;
    flex: 1;
    margin-bottom: 0;
}
.two-cols {
    display: flex;
    justify-content: space-between;
    gap: 12rpx;
}
.two-cols view {
    flex: 1;
}
.action-btn-row {
    padding: 8rpx 0;
}
.action-btn-group {
    display: flex;
    width: 100%;
    gap: 10rpx;
}
.action-btn {
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
    font-size: 26rpx;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    background-color: #f9f9f9;
    color: #333;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}
.action-btn.selected {
    background-color: #007aff;
    color: #ffffff;
    border-color: #007aff;
}
.command-output {
    width: 100%;
    padding: 18rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
    font-size: 24rpx;
    color: #007aff;
    line-height: 1.6;
    box-sizing: border-box;
    word-break: break-all;
    text-align: center;
}
.send-btn-row {
    margin-top: 10rpx;
}
.send-btn {
    width: 100%;
    padding: 26rpx 0;
    font-size: 32rpx;
    font-weight: 500;
    border-radius: 12rpx;
    background-color: #007aff;
    color: #ffffff;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
}
.send-btn:active {
    background-color: #0066cc;
    opacity: 0.9;
}