/* 微信小程序专用 最终版 - 按钮强制固定尺寸 彻底不占空间 */
.page {
  display: flex;
  flex-direction: column;
  padding: 18rpx;
  background: #F7FBFF;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 16rpx;
}
.title {
  font-size: 28rpx;
  color: #1677FF;
  font-weight: 600;
}

.tabs {
  display: flex;
  gap: 12rpx;
  justify-content: center;
  margin-bottom: 16rpx;
}
.tab {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  background: #fff;
  border: 1rpx solid #e6e9ef;
  color: #1677FF;
  font-size: 22rpx;
  margin: 0;
  min-height: auto;
}
.tab:active {
  background: #eef6ff;
}

.list {
  flex: 1;
  width: 100%;
}

.squad-group {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 12rpx 15rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e6e9ef;
  border-bottom: 1rpx solid #333333;
}
.squad-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.squad-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
  flex-wrap: nowrap; /* prevent wrapping so button stays on same line */
}
.squad-title-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0; /* allow shrinking in flex */
  overflow: hidden; /* truncate overflow */
  white-space: nowrap; /* ensure single line */
  text-overflow: ellipsis; /* show ... for overflow */
}
.squad-title-right {
  flex-shrink: 0;
  margin-left: 8rpx;
}

.player-row {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  width: 100%;
}
.player-row:last-child {
  border-bottom: none;
}

.player-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  gap: 8rpx;
}

.player-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.leader-tag {
  color: #FF5722;
  font-weight: 500;
  font-size: 22rpx;
}

.player-name {
  font-weight: 500;
  font-size: 24rpx;
  color: #222222;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-role {
  color: #666;
  font-size: 22rpx;
  margin-left: 8rpx;
  white-space: nowrap;
}

.leader-badge {
  background: rgba(245, 158, 11, 0.15);
  color: #b45309;
  border: 1rpx solid rgba(245, 158, 11, 0.3);
  padding: 2rpx 8rpx;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.player-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

