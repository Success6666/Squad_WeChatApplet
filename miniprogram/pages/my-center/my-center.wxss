.page{
  padding: 32rpx;
  padding-bottom: 160rpx;
  min-height: 100vh;
  background: #f5f7fa;
  font-family: "PingFang SC", "Inter", sans-serif;
}

.loading{
  text-align: center;
  color: #666666;
  padding: 24rpx 0;
}

.profile-card{
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.avatar-wrap{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background: #f0f2f5;
  border: 2rpx solid #cfe3ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img{
  width: 120rpx;
  height: 120rpx;
}

.avatar-placeholder{
  color: #666666;
  font-size: 36rpx;
  font-weight: 600;
}

.profile-name{
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.profile-id{
  font-size: 26rpx;
  color: #666666;
}

.action-list{
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

button.btn.secondary{
  background: #ffffff !important;
  color: #1677ff !important;
  border: 1rpx solid #1677ff !important;
  border-radius: 10rpx !important;
  height: 64rpx !important;
  width: 100% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  text-align: center !important;
  font-size: 26rpx !important;
  font-weight: 600 !important;
  line-height: normal !important;
  padding: 0 16rpx !important;
  box-sizing: border-box !important;
}

.bottom-nav{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 16rpx;
  z-index: 999;
}

.nav-item{
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 18rpx;
  color: #666666;
}

.nav-emoji{ font-size: 34rpx; }
.nav-label{ font-size: 24rpx; color: inherit; margin-top: 6rpx; }

.nav-item-active{
  color: #1677ff;
}
