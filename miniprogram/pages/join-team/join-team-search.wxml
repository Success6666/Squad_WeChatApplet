<view class="page">
  <view class="card">
    <view class="label">搜索战队（名称或ID）</view>
    <view class="row" style="gap: 16rpx;">
      <!-- ✔ 修改1：输入提示词替换为 指定文案 -->
      <input class="input" style="flex: 1; margin-bottom: 0;" placeholder="例如:=Red Alert=(支持模糊搜索)" placeholder-class="ph" value="{{keyword}}" bindinput="onKeyword" />
      <!-- ✔ 修改2：搜索按钮 强制固定占本行 1/4宽度 不可拉伸/压缩 高度不变 -->
      <button class="btn btn-primary" style="height: 94rpx; flex: 0 0 25%; box-sizing: border-box;" bindtap="search">搜索</button>
    </view>
  </view>

  <view wx:if="{{loading}}" class="empty">加载中...</view>
  <view wx:elif="{{!teams.length}}" class="empty">暂无匹配战队</view>

  <view class="team-list">
    <team-card wx:for="{{teams}}" wx:key="_id" team="{{item}}" bind:tapteam="choose" />
  </view>
</view>