.page{
  padding: 32rpx;
  padding-bottom: 160rpx;
  min-height: 100vh;
  background: #f5f7fa;
}

.loading{
  text-align: center;
  color: #666666;
  padding: 40rpx 0;
}

.team-card{
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 24rpx;
}

.team-avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin: 0 auto 24rpx auto;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #cfe3ff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.team-avatar-img{
  width: 160rpx;
  height: 160rpx;
}

.team-avatar-placeholder{
  color: #666666;
  font-size: 28rpx;
}

.team-name{
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.team-desc{
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.section-title{
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin: 0 0 16rpx 0;
}

.news-list{
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.news-item{
  font-size: 26rpx;
  color: #333333;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.empty{
  text-align: center;
  color: #666666;
  font-size: 26rpx;
  padding: 24rpx 0;
}

.join-card{
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  align-items: stretch;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
}

.btn-primary{
  background: #1677ff;
  color: #ffffff;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

.btn-outline{
  background: #ffffff;
  color: #1677ff;
  border: 1rpx solid #1677ff;
  border-radius: 12rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
}

.news-card{
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 20rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.bottom-nav{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 16rpx;
  z-index: 999;
}

.nav-item{
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 18rpx;
  color: #666666;
}

.nav-emoji{ font-size: 34rpx; }
.nav-label{ font-size: 24rpx; color: inherit; margin-top: 6rpx; }

.nav-item-active{
  color: #1677ff;
}

.cloud-error{
  background: #fff1f2;
  color: #b91c1c;
  border: 1rpx solid #fecdd3;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin: 0 0 20rpx;
  font-size: 24rpx;
}

.notice-card{
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.notice-text{
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
  white-space: pre-wrap;
}

.activity-compact{
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.activity-title-row{
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.activity-ended{
  font-size: 22rpx;
}

.activity-type-row{
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.activity-type{
  font-size: 24rpx;
  color: #4b5563;
}

.activity-count{
  font-size: 24rpx;
  color: #4b5563;
}

.activity-count-num{
  color: #1677ff;
  font-weight: 600;
}

.activity-line{
  font-size: 24rpx;
  color: #6b7280;
}

.activity-title{
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.activity-meta{
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.activity-meta .badge{
  font-size: 22rpx;
  color: #4b5563;
  background: #f3f4f6;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
}

.activity-status{
  font-size: 22rpx;
  color: #1677ff;
}
