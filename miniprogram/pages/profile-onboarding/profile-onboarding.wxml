<view class="page">
  <view class="card">
    <view class="title">完善个人资料</view>
    <view class="subtitle">新用户首次进入可先填写，也可以先跳过。</view>

    <view class="label">Steam 昵称 *</view>
    <input class="input" placeholder="你的 Steam 昵称" placeholder-class="ph" value="{{steamNick}}" bindinput="onNick" />

    <view class="label">Steam64 位 ID *</view>
    <input class="input" placeholder="7656119xxxxxxxxxx" placeholder-class="ph" value="{{steam64Id}}" bindinput="onSteam64" />

    <view class="label">擅长位置</view>
    <input class="input" placeholder="指挥 / 突击 / 支援..." placeholder-class="ph" value="{{position}}" bindinput="onPosition" />

    <view class="label">在线时间</view>
    <input class="input" placeholder="20:00-23:00" placeholder-class="ph" value="{{onlineTime}}" bindinput="onOnlineTime" />

    <view class="row" style="gap: 16rpx; margin-top: 22rpx;">
      <button class="btn btn-primary" loading="{{saving}}" bindtap="save" style="flex:1">保存并继续</button>
      <button class="btn btn-ghost" bindtap="skip" style="flex:1">先跳过</button>
    </view>
  </view>
</view>

